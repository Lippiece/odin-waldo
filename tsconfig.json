{
  "exclude"        : [
    "node_modules",
    "**/node_modules"
  ],
  "include"        : [
    "src/**/*",
    "tests/**/*",
    "src/tests/*",
    "src/tests/**/*.tsx"
  ],
  "typeAcquisition": {
    "enable" : true,
    "include": [
      "react",
      "react-dom"
    ]
  },
  "compilerOptions": {
    "types"                       : [
      "vitest/globals"
    ],
    "sourceMap"                   : true,
    "alwaysStrict"                : true,
    "jsx"                         : "react-jsx",
    //    "jsxImportSource"             : "signia-react-jsx",
    "watch"                       : true,
    "target"                      : "ESNext",
    "strictFunctionTypes"         : true,
    "strict"                      : true,
    "module"                      : "ESNext",
    "pretty"                      : true,
    "noUnusedParameters"          : true,
    "noUnusedLocals"              : true,
    "noImplicitReturns"           : true,
    "noImplicitThis"              : true,
    "moduleResolution"            : "Node",
    "moduleDetection"             : "auto",
    "noImplicitAny"               : true,
    "incremental"                 : true,
    "allowSyntheticDefaultImports": true
  }
}
